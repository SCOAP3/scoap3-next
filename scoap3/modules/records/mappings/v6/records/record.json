{
    "settings": {
        "analysis": {
            "normalizer": {
                "lowercase_normalizer": {
                    "type": "custom",
                    "char_filter": [],
                    "filter": [
                        "lowercase"
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "_oai": {
                "properties": {
                    "updated": {
                        "type": "date"
                    },
                    "sets": {
                        "type": "keyword",
                        "copy_to": "journal"
                    }
                },
                "type": "object"
            },
            "authors": {
                "properties": {
                    "full_name": {
                        "type": "text",
                        "copy_to": "author"
                    },
                    "affiliations": {
                        "properties": {
                            "country": {
                                "type": "keyword",
                                "normalizer": "lowercase_normalizer",
                                "copy_to": "country"
                            },
                            "value": {
                                "type": "text",
                                "copy_to": "affiliation"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "control_number": {
                "type": "integer"
            },
            "publication_info": {
                "properties": {
                    "journal_title": {
                        "type": "keyword",
                        "copy_to": "journal"
                    }
                },
                "type": "object"
            },
            "journal": {
                "type": "keyword"
            },
            "record_creation_date": {
                "type": "date",
                "format": "yyyy||yyyy-MM||yyyy-MM-dd||yyyy-MM-dd'T'HH:mm:ss.SSSSSS||yyyy-MM-dd'T'HH:mm:ss"
            },
            "titles": {
                "properties": {
                    "title": {
                        "type": "keyword",
                        "copy_to": "title"
                    }
                },
                "type": "object"
            },
            "dois": {
                "properties": {
                    "value": {
                        "type": "keyword",
                        "normalizer": "lowercase_normalizer",
                        "copy_to": "doi"
                    }
                },
                "type": "object"
            },
            "facet_collaboration": {
                "type": "keyword"
            },
            "country": {
                "type": "keyword"
            },
            "affiliation": {
                "type": "keyword"
            },
            "title": {
                "type": "text"
            },
            "author": {
                "type": "text"
            },
            "date": {
                "type": "date"
            },
            "doi": {
                "type": "keyword"
            },
            "imprints": {
                "properties": {
                    "date": {
                        "format": "yyyy||yyyy-MM||yyyy-MM-dd",
                        "type": "date",
                        "copy_to": "date"
                    }
                },
                "type": "object"
            },
            "year": {
                "type": "date",
                "format": "yyyy"
            }
        }
    }
}
